<!--
  This section renders the main hero banner based on the Figma design.
  - V3: Combines header elements for desktop and creates a mobile dropdown menu.
-->
<div class="custom-banner-container">
  <!-- START: Combined Header -->
  <header class="custom-banner-header">
    <div class="custom-banner-menu-icon" id="mobile-menu-open">
      <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line></svg>
    </div>

    <div class="custom-banner-brand">
      <a href="/">{{ section.settings.brand_name }}</a>
    </div>

    <div class="header-center-text">
        <p>{{ section.settings.top_bar_text }}</p>
    </div>

    <div class="header-button">
      {% if section.settings.top_button_text != blank and section.settings.top_button_link != blank %}
        <a href="{{ section.settings.top_button_link }}" class="custom-banner-button-secondary">
          {{ section.settings.top_button_text }}
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M12.9167 6.99984L17.9167 11.9998M17.9167 11.9998L12.9167 16.9998M17.9167 11.9998H5.91675" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
        </a>
      {% endif %}
    </div>
  </header>
  <!-- END: Combined Header -->

  <!-- START: Mobile Dropdown Menu -->
  <div class="mobile-nav" id="mobile-nav-menu">
    <div class="mobile-nav-header">
        <div class="mobile-nav-close" id="mobile-menu-close">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
        </div>
        <div class="custom-banner-brand">
          <a href="/">{{ section.settings.brand_name }}</a>
        </div>
    </div>
    <div class="mobile-nav-content">
        <p>{{ section.settings.top_bar_text }}</p>
        {% if section.settings.top_button_text != blank and section.settings.top_button_link != blank %}
          <a href="{{ section.settings.top_button_link }}" class="custom-banner-button-secondary">
            {{ section.settings.top_button_text }}
             <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M12.9167 6.99984L17.9167 11.9998M17.9167 11.9998L12.9167 16.9998M17.9167 11.9998H5.91675" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
          </a>
        {% endif %}
    </div>
  </div>
  <!-- END: Mobile Dropdown Menu -->

  <div class="custom-banner-content">
    <div class="custom-banner-text">
      <h1>{{ section.settings.heading }}</h1>
      <p>{{ section.settings.subheading }}</p>
      {% if section.settings.main_button_text != blank and section.settings.main_button_link != blank %}
        <a href="{{ section.settings.main_button_link }}" class="custom-banner-button-primary">
          {{ section.settings.main_button_text }}
          <span>&rarr;</span>
        </a>
      {% endif %}
    </div>
  </div>

  {% if section.settings.background_image != blank %}
    <div class="custom-banner-background">
      <img src="{{ section.settings.background_image | image_url: width: 2000 }}"
           alt="{{ section.settings.background_image.alt | escape }}"
           loading="lazy"
           width="{{ section.settings.background_image.width }}"
           height="{{ section.settings.background_image.height }}">
    </div>
  {% endif %}

  <div class="custom-banner-bottom-bar">
    <p>{{ section.settings.bottom_text }}</p>
  </div>
</div>

<style>
  .custom-banner-container {
    --text-color: #000;
    --bg-color: #fff;
    --primary-button-bg: #000;
    --primary-button-text: #fff;
    --secondary-button-bg: #FFD700;

    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    display: flex;
    flex-direction: column;
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    padding: 1rem;
    box-sizing: border-box;
    position: relative;
    overflow: hidden;
  }
  
  .custom-banner-header {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    padding: 1rem 0;
    width: 100%;
  }
  .custom-banner-brand {
    grid-column: 1 / 2;
    justify-self: start;
  }
  .header-center-text {
    grid-column: 2 / 3;
    justify-self: center;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }
  .header-button {
    grid-column: 3 / 4;
    justify-self: end;
  }

  .custom-banner-brand a {
    font-size: 1.8rem;
    font-weight: 500;
    letter-spacing: 0.2em;
    text-decoration: none;
    color: var(--text-color);
    text-transform: uppercase;
  }
  .custom-banner-menu-icon { display: none; }
  .mobile-nav { display: none; }

  /* This is the main content area, not the header */
  .custom-banner-bottom-bar {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    padding: 1rem 0;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .custom-banner-content {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding: 4rem 2rem;
    text-align: left;
    position: relative;
    z-index: 2;
  }

  .custom-banner-text { max-width: 450px; }
  .custom-banner-text h1 {
    font-size: 3.5rem;
    font-weight: 600;
    margin: 0 0 1rem;
    line-height: 1.1;
  }
  .custom-banner-text p {
    font-size: 1.1rem;
    line-height: 1.6;
    max-width: 350px;
    margin: 0 0 2rem;
  }
  
  .custom-banner-button-secondary {
    display: inline-flex;
    align-items: center;
    padding: 0.75rem 1.5rem;
    background-color: var(--secondary-button-bg);
    color: var(--text-color);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    border-radius: 4px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .custom-banner-button-secondary svg {
    margin-left: 8px;
    transition: transform 0.3s ease;
  }
  .custom-banner-button-secondary:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
  }
  .custom-banner-button-secondary:hover svg {
     transform: translateX(4px);
  }

  .custom-banner-button-primary {
    display: inline-block;
    padding: 1rem 2rem;
    background-color: var(--primary-button-bg);
    color: var(--primary-button-text);
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    border-radius: 4px;
    position: relative;
    overflow: hidden;
    transition: color 0.4s ease-in-out;
  }

  .custom-banner-button-primary span {
    display: inline-block;
    transition: transform 0.3s ease;
    margin-left: 0.5em;
  }
  .custom-banner-button-primary:hover span { transform: translateX(5px); }
  .custom-banner-background {
    position: absolute;
    top: 50%;
    left: 55%;
    width: 65%;
    transform: translateY(-50%);
    z-index: 1;
    pointer-events: none;
    opacity: 0.9;
  }
  .custom-banner-background img {
    width: 100%;
    height: auto;
    object-fit: contain;
  }

  /* Responsive Mobile Styles */
  @media (max-width: 768px) {
    .custom-banner-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .header-center-text, .header-button { display: none; }
    .custom-banner-menu-icon { display: block; cursor: pointer; }
    .custom-banner-brand a { font-size: 1.5rem; }
    
    .mobile-nav {
      display: block;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      background-color: #fff;
      z-index: 1001;
      border-bottom: 1px solid #e5e5e5;
      padding: 1rem;
      box-sizing: border-box;
      transform: translateY(-120%);
      transition: transform 0.4s ease-in-out;
    }
    .mobile-nav.is-open {
        transform: translateY(0);
    }
    .mobile-nav-header {
      display: flex;
      justify-content: flex-start;
      align-items: center;
      gap: 1rem;
      border-bottom: 1px solid #e5e5e5;
      padding-bottom: 1rem;
      margin-bottom: 1rem;
    }
    .mobile-nav-close { cursor: pointer; }
    .mobile-nav-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        text-align: center;
    }
    .mobile-nav-content p {
        font-size: 1rem;
        margin: 0;
    }

    .custom-banner-container { padding: 0; }
    .custom-banner-background {
      position: relative;
      width: 100%;
      left: 0;
      top: 0;
      transform: none;
      margin: -2rem 0;
      opacity: 0.5;
    }
    .custom-banner-content {
      padding: 2rem 1rem;
      text-align: center;
      justify-content: center;
      width: 100%;
    }
    .custom-banner-text { max-width: 100%; }
    .custom-banner-text h1 { font-size: 2.5rem; }
    .custom-banner-text p {
      max-width: 100%;
      margin-left: auto;
      margin-right: auto;
    }
    .custom-banner-bottom-bar {
       text-align: center;
       padding: 1rem;
       font-size: 0.75rem;
       line-height: 1.5;
     }
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const menuOpenBtn = document.getElementById('mobile-menu-open');
  const menuCloseBtn = document.getElementById('mobile-menu-close');
  const mobileNavMenu = document.getElementById('mobile-nav-menu');

  if (menuOpenBtn && menuCloseBtn && mobileNavMenu) {
    menuOpenBtn.addEventListener('click', function() {
      mobileNavMenu.classList.add('is-open');
    });

    menuCloseBtn.addEventListener('click', function() {
      mobileNavMenu.classList.remove('is-open');
    });
  }
});
</script>

{% schema %}
{
  "name": "Custom Banner",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "brand_name",
      "label": "Brand Name",
      "default": "TISSO VISON"
    },
    {
      "type": "text",
      "id": "top_bar_text",
      "label": "Top bar text",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "top_button_text",
      "label": "Top bar button text",
      "default": "Choose Gift"
    },
    {
      "type": "url",
      "id": "top_button_link",
      "label": "Top bar button link"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background illustration"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "main_button_text",
      "label": "Main button text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "main_button_link",
      "label": "Main button link"
    },
    {
      "type": "text",
      "id": "bottom_text",
      "label": "Bottom bar text",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO XXL"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner"
    }
  ]
}
{% endschema %}